<!DOCTYPE html>
<html>
<head>
  <title>Homebase2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <% if !current_user %>
    <span id="create-account"></span>
  <% end %>
  <div class="collapse navbar-collapse">
    <% if logged_in? %>
      <% if parent_mode? %>
        <%= link_to "Logout", '/logout', method: :delete, class: "logout" %>
        <a href="#loginmodal" class="flatbtn2" id="normaltrigger">Exit Parent Mode</a>
      <% else %>
        <a href="#loginmodal" class="flatbtn" id="parenttrigger">Enter Parent Mode</a>
      <% end %>
    <% else %>
      <div id='form-login'>
        <%= form_tag "/login", method: "post" do %>
        <%= label_tag :email %>:
        <%= text_field_tag :email %>
        <%= label_tag :password %>:
        <%= password_field_tag :password %>
        <%= submit_tag "sign in", :class => 'btn btn-default' %>
        <%= link_to "Signup",  new_family_path %>
        <% end %>
      </div>
    <% end %>


  <a href="#chore-box" class="chore-window">New Chore</a>
    <div id="chore-box" class="chore-popup">
    <a href="#" class="close"><img src="/assets/close_pop.png" class="btn_close" title="Close Window" alt="Close" /></a>
    <form method="post" class="signin" action="tasks">
      <%= token_tag(nil) %>
      <fieldset class="textbox">
        <label class="username">
        <span>New Chore</span>
        <input id="title" name="title" type="text" autocomplete="on" placeholder="Chore">
        </label>
        <label class="points">
        <span>Point Value</span>
        <input id="points" name="points" type="text" autocomplete="on" placeholder="Point Value">
        </label>
        <label class="deadline">
        <span>Deadline</span>
        <input id="deadline" name="deadline" type="date" autocomplete="on" placeholder="Deadline" value='2015-05-31'>
        </label>
        <label class="assign">
          <span>Assign to:</span>
          <select name="name">
            <option value="member"> </option>
            <option value="1">Kid 1</option>
            <option value="2">Kid 2</option>
            <option value="3">Kid 3</option>
            <option value="4">Kid 4</option>
            </select>
            <br><br>
        </label>
        <input type='submit' class='submit' name="Assign_Chore">
      </fieldset>
  </form>
</div>
  <%= yield %>
</div>
</body>
</html>
